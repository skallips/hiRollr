<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1C26"
    tools:context=".VenueActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="45dp">

        <TextView
            android:id="@+id/venueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="Venue Setup"
            android:textColor="#988989"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/regionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Region:"
            android:textColor="#988989"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/regionSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#988989"
            android:textSize="18dp"  />

        <TextView
            android:id="@+id/venueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Casino/Venue:"
            android:textColor="#988989"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/venueSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#988989"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/gameTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Game Type"
            android:textColor="#988989"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/gameTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#988989"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/gameSubtypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Game Subtype"
            android:textColor="#988989"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/gameSubtypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#988989"
            android:textSize="18dp" />

        <!--TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Back"
                app:backgroundTint="#CE2A5E" />

            <TextView
                android:id="@+id/spaceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="400"
                android:text="" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Next"
                app:backgroundTint="#CE2A5E" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>